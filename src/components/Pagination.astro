---
// IMPORTS
// Components

// FUNCTIONS & ACTIONS
const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Pagination component" class="pagination">
  {
    (prevUrl || nextUrl) && (
      <ul>
        {prevUrl && <li><a href={prevUrl}>&larr;</a></li>}
        {nextUrl && <li><a href={nextUrl}>&rarr;</a></li>}
      </ul>
    )
  }
</nav>
