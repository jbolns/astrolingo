---
// IMPORTS
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

// TYPES
interface Props {
	title: string;
	description: string;
	pageTitle?: string;
	locale: string;
	heroImage?: string;
}

// FUNCTIONS & ACTIONS
// Get props, incl. locale
const { title, description, pageTitle, locale, heroImage } = Astro.props;
---

<html lang={locale}>
	<head>
		<BaseHead
			title={title}
			description={description}
			locale={locale}
			pageTitle={pageTitle}
			heroImage={heroImage}
		/>
	</head>

	<body>
		<Header locale={locale} />
		<main>
			<slot />
		</main>
		<Footer locale={locale} />
	</body>
</html>
