---
// IMPORTS
import BaseLayout from "@layouts/BaseLayout.astro";
import { site } from "@i18n/sections";


// ACTIONS
// Get props from child component
const { locale, section } = Astro.props;
---

<BaseLayout
	title={site.title[locale]}
	description={site.description[locale]}
	pageTitle={section}
	locale={locale}
>
	<slot />
</BaseLayout>
